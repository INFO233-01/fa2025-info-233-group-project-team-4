randomCountries = [random.choice(list(myDict["countries"].keys()))for _ in range(5)]
while True:
    try:
        import sys
        print()
        print(f"Your random countries are 1:{randomCountries[0]}, 2:{randomCountries[1]}, 3:{randomCountries[2]}, 4:{randomCountries[3]}, 5:{randomCountries[4]}")
        countryChoice=input("Which country would you like to get more information about? Type in the number of the country. If you want a different set of random countries, type new. If you are done, type done.")
        if countryChoice.lower()=="new":
            randomCountries = [random.choice(list(myDict["countries"].keys()))for _ in range(5)]
            continue
        elif countryChoice.lower()=="done":
            print()
            print("Thank you for using this program.")
            sys.exit()
        else:
            while True:
                countryChoice=randomCountries[int(countryChoice)-1]
                print()
                print(f"The country you chose is {countryChoice}. The capital is {myDict['countries'][countryChoice]['capital']}. The currency is {myDict['countries'][countryChoice]['currency']}. If you go to this country, you should {myDict['countries'][countryChoice]['vacation']}.")
                countryChoice=input("Would you like to pick a different country? If so, type in the number. If you want new random countries, type new. If you are done, type done.")
                if countryChoice.lower()=="done":
                    print()
                    print("Thank you for using this program.")
                    sys.exit()
                elif countryChoice.lower()=="new":
                    randomCountries = [random.choice(list(myDict["countries"].keys()))for _ in range(5)]
                    break
                elif int(countryChoice) in range (1,6):
                    continue
                else:
                    continue
    except ValueError:
        print()
        print("Your choice is invalid. Please choose again.")
        continue
    except KeyError:
        print("Your choice is invalid. Please choose again.")
        print()
        continue
    except IndexError:
        print()
        print("Your choice is invalid. Please choose again.")
        continue            
        

        
                

